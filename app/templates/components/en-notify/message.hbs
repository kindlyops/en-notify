{{#if message.header}}
  <div class="en-notify-header">
    {{#if isSuccess}}
      <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="16px" height="16px" viewBox="0 0 16 16"><g><path fill="#33bd34" d="M8,0C3.6,0,0,3.6,0,8s3.6,8,8,8s8-3.6,8-8S12.4,0,8,0z M7,11.4L3.6,8L5,6.6l2,2l4-4L12.4,6L7,11.4z"/> </g></svg>
    {{/if}}

    {{message.header}}

    <div {{action "close"}} class="en-notify-close">
      &times;
    </div>
  </div>
{{/if}}

<div class="en-notify-text">
  {{#if message.text}}
    {{message.text}}
  {{else if message.errors}}
    <ul>
      {{#each message.errors as |error|}}
        <li>
          {{error}}
        </li>
      {{/each}}
    </ul>
  {{/if}}
</div>

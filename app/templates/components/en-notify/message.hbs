{{#if message.header}}
  <div class="en-notify-header">
    {{message.header}}

    <div {{action "close"}} class="en-notify-close">
      &times;
    </div>
  </div>
{{/if}}

<div class="en-notify-text">
  {{#if message.text}}
    {{#if isSuccess}}
      <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="12px" height="12px" viewBox="0 0 16 16"><g> <path data-color="color-2" fill="#494949" d="M5.7,7.3c-0.4-0.4-1-0.4-1.4,0s-0.4,1,0,1.4l2,2C6.5,10.9,6.7,11,7,11s0.5-0.1,0.7-0.3l7-7 c0.4-0.4,0.4-1,0-1.4s-1-0.4-1.4,0L7,8.6L5.7,7.3z"></path> <path fill="#494949" d="M7,16c3.9,0,7-3.1,7-7c0-0.6-0.4-1-1-1s-1,0.4-1,1c0,2.8-2.2,5-5,5s-5-2.2-5-5s2.2-5,5-5 c0.6,0,1.1,0.1,1.7,0.3c0.5,0.2,1.1-0.1,1.3-0.6c0.2-0.5-0.1-1.1-0.6-1.3C8.6,2.1,7.8,2,7,2C3.1,2,0,5.1,0,9S3.1,16,7,16z"></path> </g></svg>
    {{/if}}

    {{message.text}}
  {{else if message.errors}}
    <ul>
      {{#each message.errors as |error|}}
        <li>
          {{error}}
        </li>
      {{/each}}
    </ul>
  {{/if}}
</div>
